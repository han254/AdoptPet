<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pet1" />

    <Button
        android:id="@+id/findPet"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:fontWeight="200"
        android:text="Get started"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="327dp"
        android:text="Adopt Your Favorite Pet"
        android:textColor="@color/dark"
        android:fontWeight="700"
        android:textSize="34sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="406dp"
        android:textColor="@color/dark"
        android:text="Find your new pet and we'll guide you the adoption process! See how to adopt."
        android:fontWeight="400"
        android:textSize="20sp"/>

</RelativeLayout>